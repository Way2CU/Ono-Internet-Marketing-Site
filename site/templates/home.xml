<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Header -->
			<cms:template file="stock/header_generic.xml" >
				<param name="fixed" value=""/>
				<param name="menu" value="parts/menu_items.xml"/>
				<param name="logo" value="logo.svg"/>
			</cms:template>

			<!-- Section header -->
			<section id="header">
				<!-- Main article -->
				<cms:module
					name="articles"
					action="show"
					group="header_articles"
					text_id="header_article"
					template="parts/article_custom_template.xml"
					/>

				<!-- Clouds -->
				<span class="cloud"></span>
				<span class="cloud"></span>
				<span class="cloud"></span>
				<span class="cloud"></span>

				<!-- Baloons -->
				<span class="baloon" id="wordpress"></span>
				<span class="baloon" id="social"></span>
				<span class="baloon" id="webdev"></span>

				<!-- Billboards -->
				<span class="billboard" id="youtube"></span>
				<span class="billboard" id="analytics"></span>
				<span class="billboard" id="taboola"></span>
				<span class="billboard" id="outbrain"></span>
			</section>
		</body>
	</html>
</document>
