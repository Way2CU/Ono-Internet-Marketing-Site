<document>
	<!-- Show download link with customized text -->
	<a
		class="download"
		href="javascript:void(0)"
		data-download="$params['url']"
		data-title="Language::get_text($template['title'])"
		data-button="Language::get_text($template['button'])"
		cms:eval="data-download,data-title,data-button"
		>
		<cms:text constant="$template['constant']" cms:eval="constant"/>
	</a>
</document>
