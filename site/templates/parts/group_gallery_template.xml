<document>
	<cms:markdown param="description" multilanguage="yes"/>

	<cms:module
		name="gallery"
		action="show_image_list"
		group_id="$params['id']"
		template="stock/image_generic.xml"
		cms:eval="group_id"
		>
		<cms:if condition="isset($template['bigThumb'])">
			<param name="thumbnail_size" value="600px"/>
		</cms:if>
		<param name="thumbnail_size" value="350px"/>
	</cms:module>
</document>